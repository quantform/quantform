{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Library",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "types": [
      "node"
    ],
    "target": "es2015",
    "module": "CommonJS",
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "jest.config.ts",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}