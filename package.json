{
  "name": "quantform",
  "version": "0.3.12",
  "packageManager": "yarn@3.0.2",
  "private": true,
  "scripts": {
    "build": "yarn workspaces foreach -v --topological-dev run build",
    "publish": "yarn workspaces foreach -tv --no-private npm publish",
    "bump": "yarn workspaces foreach -tv version -d patch",
    "bump-apply": "yarn workspaces foreach -tv version apply",
    "test:unit": "yarn workspaces foreach -tv run test:unit"
  },
  "workspaces": [
    "packages/core",
    "packages/adapter/*",
    "packages/storage/*"
  ],
  "dependencies": {
    "jest": "^27.3.1",
    "rxjs": "^7.4.0"
  }
}
