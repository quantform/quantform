{
  "name": "quantform",
  "packageManager": "yarn@3.0.2",
  "private": true,
  "scripts": {
    "build": "yarn workspaces foreach run build",
    "publish": "yarn workspaces foreach --no-private npm publish --tolerate-republish",
    "test:unit": "yarn workspaces foreach run test:unit"
  },
  "workspaces": [
    "packages/core",
    "packages/express",
    "packages/adapter/*",
    "packages/storage/*"
  ]
}
