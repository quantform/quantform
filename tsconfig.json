{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "incremental": true,
    "allowJs": true
  },
  "include": ["*.ts", "**/*.ts"],
  "exclude": ["../node_modules", "./**/dist"]
}
