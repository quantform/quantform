{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/studio",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/next:build",
      "dependsOn": ["build-custom-server"],
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "root": "packages/studio",
        "outputPath": "dist/packages/studio",
        "main": "packages/studio/src/index.ts"
      },
      "configurations": {
        "development": {
          "outputPath": "packages/studio"
        },
        "production": {}
      }
    },
    "build-custom-server": {
      "executor": "@nrwl/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/studio",
        "main": "packages/studio/src/index.ts",
        "tsConfig": "packages/studio/tsconfig.lib.json",
        "assets": ["packages/studio/*.md"]
      }
    },
    "serve": {
      "executor": "@nrwl/next:server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "studio:build",
        "dev": true
      },
      "configurations": {
        "development": {
          "buildTarget": "studio:build:development",
          "dev": true
        },
        "production": {
          "buildTarget": "studio:build:production",
          "dev": false
        }
      }
    },
    "export": {
      "executor": "@nrwl/next:export",
      "options": {
        "buildTarget": "studio:build:production"
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/packages/studio"],
      "options": {
        "jestConfig": "packages/studio/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/studio/**/*.{ts,tsx,js,jsx}"]
      }
    }
  },
  "tags": []
}
