    "next": "12.1.0",
    "ramda": "^0.28.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "rxjs": "^7.5.5",
    "socket.io": "^4.4.1",
    "socket.io-client": "^4.4.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.16.7",
    "@types/d3": "^7.1.0",
    "@types/lodash": "^4.14.181",
    "@types/node": "17.0.23",
    "@types/ramda": "^0.28.4",
    "@types/react": "17.0.42",
    "@types/uuid": "^8.3.4",
    "autoprefixer": "^10.4.4",
    "eslint": "8.11.0",
    "eslint-config-next": "12.1.0",
    "jest": "^27.5.1",
    "postcss": "^8.4.12",
    "tailwindcss": "^3.0.23",
    "ts-jest": "^27.1.4",
    "typescript": "4.6.2"
  },
  "peerDependencies": {
    "@quantform/core": "*"
  }
