{
  "name": "@quantform/studio",
  "version": "0.3.12",
  "license": "MIT",
  "description": "React app designed for rendering measurements to debug and analyze strategy execution on the fly.",
  "repository": {
    "type": "git",
    "url": "https://github.com/quantform/quantform"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build:server": "tsc --project tsconfig.server.json",
    "build:next": "next build",
    "build": "yarn run build:next && yarn run build:server",
    "test:unit": "jest -c jestconfig.unit.json --coverage --passWithNoTests",
    "test:integration": "jest -c jestconfig.integration.json --setupFiles dotenv/config"
  },
  "dependencies": {
    "d3": "^7.4.0",
    "lightweight-charts": "https://github.com/Majchrzak/lightweight-charts",
