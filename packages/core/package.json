{
  "name": "@quantform/core",
  "version": "0.1.0",
  "description": "Node.js library for building systematic trading strategies in reactive way.",
  "repository": {
    "type": "git",
    "url": "https://github.com/quantform/quantform"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepare": "npm run build",
    "build": "tsc --project tsconfig.build.json",
    "test:unit": "jest -c jestconfig.unit.json",
    "test:unit:watch": "jest -c jestconfig.unit.json --watch",
    "test:integration": "jest -c jestconfig.integration.json --setupFiles dotenv/config",
    "test:integration:watch": "jest -c jestconfig.integration.json --watch --setupFiles dotenv/config",
    "test:cov": "jest -c jestconfig.json --coverage --setupFiles dotenv/config"
  },
  "author": "Mateusz Majchrzak",
  "license": "MIT",
  "dependencies": {
    "object-hash": "^2.1.1",
    "rxjs": "^6.6.3",
    "ts-retry": "^2.3.0",
    "typescript-collections": "^1.3.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^13.13.35",
    "@typescript-eslint/eslint-plugin": "3.9.1",
    "@typescript-eslint/parser": "3.9.1",
    "eslint": "7.7.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "jest": "^27.2.4",
    "prettier": "^1.19.1",
    "reflect-metadata": "^0.1.13",
    "ts-jest": "^27.0.5",
    "ts-loader": "^6.2.1",
    "ts-node": "9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "engines": {
    "node": ">= 10.13.0"
  }
}
