{
  "name": "@quantform/core",
  "version": "0.3.12",
  "author": "Mateusz Majchrzak",
  "license": "MIT",
  "description": "Node.js library for building systematic trading strategies in reactive way.",
  "repository": {
    "type": "git",
    "url": "https://github.com/quantform/quantform"
  },
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "qf": "./dist/cli/index.js"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepare": "npm run build",
    "build": "tsc",
    "test:unit": "jest -c jestconfig.unit.json --coverage --passWithNoTests",
    "test:unit:watch": "jest -c jestconfig.unit.json --watch",
    "test:integration": "jest -c jestconfig.integration.json --setupFiles dotenv/config",
    "test:integration:watch": "jest -c jestconfig.integration.json --watch --setupFiles dotenv/config"
  },
  "dependencies": {
    "commander": "^9.1.0",
    "dotenv": "^16.0.0",
    "minimist": "^1.2.6",
    "object-hash": "^3.0.0",
    "reflect-metadata": "^0.1.13",
    "ts-retry": "^2.4.0",
    "typescript-collections": "^1.3.3",
    "uuid": "^8.3.2"
  },
  "peerDependencies": {
    "rxjs": "*"
  },
  "devDependencies": {
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "jest": "^27.5.1",
    "prettier": "^2.6.1",
    "ts-jest": "^27.1.4",
    "ts-loader": "^9.2.8",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.6.3"
  },
  "engines": {
    "node": ">= 14.18.1"
  }
}
