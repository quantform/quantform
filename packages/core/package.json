{
  "name": "@quantform/core",
  "description": "Node.js library for building systematic trading strategies in reactive way.",
  "repository": {
    "type": "git",
    "url": "https://github.com/quantform/quantform"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepare": "npm run build",
    "build": "tsc",
    "test:unit": "jest -c jestconfig.unit.json --passWithNoTests",
    "test:unit:watch": "jest -c jestconfig.unit.json --watch",
    "test:integration": "jest -c jestconfig.integration.json --setupFiles dotenv/config",
    "test:integration:watch": "jest -c jestconfig.integration.json --watch --setupFiles dotenv/config",
    "test:cov": "jest -c jestconfig.json --coverage --setupFiles dotenv/config"
  },
  "author": "Mateusz Majchrzak",
  "license": "MIT",
  "dependencies": {
    "minimist": "^1.2.5",
    "object-hash": "^2.2.0",
    "rxjs": "^7.4.0",
    "ts-retry": "^2.3.6",
    "typescript-collections": "^1.3.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.3",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.1",
    "jest": "^27.2.5",
    "prettier": "^2.4.1",
    "reflect-metadata": "^0.1.13",
    "ts-jest": "^27.0.5",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.3.0",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.4.3"
  },
  "engines": {
    "node": ">= 14.18.1"
  }
}
